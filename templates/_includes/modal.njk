{% macro modal(_) %}
    <div class="modal micromodal-slide" id="modal-{{ _.id }}-{{ _.type }}" aria-hidden="true">
        <div class="modal__overlay" tabindex="-1" data-micromodal-close>
            <div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="modal-{{ _.id }}-{{ _.type }}-title">
                <header class="modal__header">
                    <h2 class="modal__title | c-black" id="modal-{{ _.id }}-{{ _.type }}-title">{{ _.title }}</h2>
                    <button class="modal__close" aria-label="Close modal" data-micromodal-close></button>
                </header>
                <div class="modal__content" id="modal-{{ _.id }}-{{ _.type }}-content">
                    <p>{{ _.description | safe }}</p>
                    {% set filePath = "field-groups/" ~ _.type ~ "/" ~ _.id ~ "." ~ _.type %}
                    <pre class="modal__code | language-{{ _.type }}"><code data-language="{{ _.type }}" class="language-{{ _.type }}" id="modal-{{ _.id }}-{{ _.type }}-code">{% include filePath %}</code></pre>
                </div>
                <footer class="modal__footer">
                    <copy-button data-target="#modal-{{ _.id }}-{{ _.type }}-code">
                        <button class="btn btn--magenta">Copy</button>
                    </copy-button>
                </footer>
            </div>
        </div>
    </div>
{% endmacro %}